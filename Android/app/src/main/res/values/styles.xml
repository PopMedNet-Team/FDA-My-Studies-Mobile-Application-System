<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="passcodeTheme" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoActionBar1" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--Custom Alert-->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimaryBlack</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorPrimaryBlack</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <!--Custom dialog style profile screen-->
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorSecondaryStatBar</item>
    </style>
    <!--Custom Dialog in Dashboard calender-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--Text Styles-->
    <style name="studyActivitySize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/studyActivityValSize</item>
    </style>
    <!--Text Styles-->
    <style name="Titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/headlinSize</item>
    </style>

    <style name="textTypeMenuItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textTypeMenuItemSize</item>
    </style>

    <style name="TextType1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType1Size</item>
    </style>

    <style name="TextType2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType2Size</item>
    </style>

    <style name="TextType3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType3Size</item>
    </style>

    <style name="TextType4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType4Size</item>
    </style>

    <style name="TextType5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType5Size</item>
    </style>

    <style name="TextType6">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/force_upgrade_size</item>
    </style>

    <style name="TextType1wMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType1Size</item>
    </style>

    <style name="TextType2wMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType2Size</item>
    </style>

    <style name="TextType3wMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType3Size</item>
    </style>

    <style name="TextType4wMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType4Size</item>
    </style>

    <style name="TextType5wMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType5Size</item>
    </style>

    <!--Signup Edittext TEXT Styles-->

    <style name="signUpTextField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType2Size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
    </style>

    <style name="contactUsTextField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType2Size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
    </style>

    <!--Signup Edittext Edit Styles-->
    <style name="signUpEditText">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">@dimen/textType2Size</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:hint"></item>
        <item name="android:textColorHint">@color/colorSecondary</item>
    </style>

    <!--Filter Screen Edittext Edit Styles-->
    <style name="filterEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">@dimen/textType2Size</item>
        <item name="android:background">@null</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:hint"></item>
        <item name="android:textColorHint">@color/colorSecondary</item>
    </style>
    <!--Profile TEXT Styles-->

    <style name="profileTextField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textType2Size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>


    <!--Forgot password style-->
    <style name="ForgotPasswordEdittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">@dimen/textType2Size</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:hint"></item>
        <item name="android:textColorHint">@color/colorSecondary</item>
    </style>


    <!--Signup Edittext Styles-->
    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/colorSecondary</item>
    </style>

</resources>
